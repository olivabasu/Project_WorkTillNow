@model MemberPortal.Models.Subscription

@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}


<h4 class="text-danger">Unsubscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Unsubscription_For_Mailorder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <p>Enter Subscription ID: </p>
                <input asp-for="Sub_id" class="form-control" />
                <span asp-validation-for="Sub_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <p>Enter Subscription Date: </p>
                <input asp-for="SubscriptionDate" class="form-control" />
                <span asp-validation-for="SubscriptionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <p>Enter Refill Occurance: </p>
                <input asp-for="RefillOccurrence" class="form-control" />
                <span asp-validation-for="RefillOccurrence" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Unsubscribe" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
